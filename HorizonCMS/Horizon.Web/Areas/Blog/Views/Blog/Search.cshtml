@model List<Horizon.Web.Models.Post>
@{
    Layout = "~/Areas/Blog/Views/Shared/_BlogLayout.cshtml";
}

<div class="container">
    @Html.Partial("Controls/_BreadCrumb", ViewBag.BreadCrumb as Horizon.Web.Models.BreadCrumb)
    <div class="row section">
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
            @if (Model.Count > 0)
            {
                foreach (var post in Model as List<Horizon.Web.Models.Post>)
                {
                    if (post.PostType.Name.Equals("Image post"))
                    {
                        @Html.Partial("_PostType/_ImagePost", post)
                    }
                    else if (post.PostType.Name.Equals("Text post"))
                    {
                        @Html.Partial("_PostType/_TextPost", post)
                    }
                    else if (post.PostType.Name.Equals("Text post"))
                    {
                        @Html.Partial("_PostType/_VideoPost", post)
                    }

                }

            }
            else
            {
                <div class="col-md-12 col-sm-12 col-md-12 col-lg-12">
                    <h3>Oooops! No posts yet</h3>
                    <p>Come within an hour or later</p>
                </div>
            }
            <h3>Related posts</h3>
        </div>
        <div class="col-xs-12-col-sm-12 col-md-4 col-lg-4">
            @Html.Partial("_BlogSideNavigation")
        </div>
    </div>
</div>
